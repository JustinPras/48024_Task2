<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.VBox?>	
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox fx:controller="controller.SessionController" styleClass="background" prefHeight="300.0" prefWidth="600.0" spacing="50" 
      xmlns:fx="http://javafx.com/fxml" >    
        
    <VBox styleClass="header" spacing="20" >
        <ImageView>
            <Image url="@uts.png"/>
        </ImageView>
        <Label styleClass="h1" alignment="CENTER" text="Tuition Management System"/>   
    </VBox>
     
    <VBox alignment="BOTTOM_RIGHT" spacing="20" >
        <Button  text="Login" fx:id="loginBtn" onAction="#handleLogin"/>
        <Button text="Exit" fx:id="exitBtn" onAction="#handleExit"/>
    </VBox>
    
    
    <stylesheets>
          <URL value="@tmsfx.css"/>
    </stylesheets>
      
</VBox>
